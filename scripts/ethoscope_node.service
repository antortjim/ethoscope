[Unit]
Description=Ethoscope node server
Wants=ntpd.service
After=ntpd.service


[Service]
Type=simple
EnvironmentFile=/etc/default/ethoscope_node
WorkingDirectory=/opt/ethoscope-node/node_src/scripts
ExecStart=/opt/ethoscope-node/scripts/python  /opt/ethoscope-node/node_src/scripts/server.py
RestartSec=5
Restart=always

[Install]
WantedBy=multi-user.target

